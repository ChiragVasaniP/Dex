<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:dither="true" android:shape="rectangle" android:useLevel="false" android:visible="true">
            <corners android:bottomLeftRadius="16dp" android:bottomRightRadius="16dp" android:topLeftRadius="16dp"
                android:topRightRadius="16dp" />
            <size android:width="50dp" android:height="30dp" />

            <solid android:color="#E2E0E3" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:dither="true" android:shape="rectangle" android:useLevel="false" android:visible="true">
            <corners android:bottomLeftRadius="16dp"
                android:bottomRightRadius="16dp"
                android:topLeftRadius="16dp" android:topRightRadius="16dp" />
            <size android:width="50dp" android:height="30dp" />
            <solid android:color="#E2E0E3" />
        </shape>
    </item>
    <item>
        <shape android:dither="true" android:shape="rectangle" android:useLevel="false" android:visible="true">
            <corners android:bottomLeftRadius="16dp"
                android:bottomRightRadius="16dp"
                android:topLeftRadius="16dp" android:topRightRadius="16dp" />
            <size android:width="50dp" android:height="30dp" />
            <solid android:color="#E2E0E3" />
        </shape>
    </item> <!-- default state -->
</selector>